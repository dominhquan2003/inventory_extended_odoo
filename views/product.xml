<odoo>
  <!-- Form Extend -->
  <record id="view_form_product_edited" model="ir.ui.view">
    <field name="name">Edited Product Fields</field>
    <field name="model">product.template</field>
    <field name="inherit_id"
      ref="product.product_template_only_form_view" />
    <field name="arch" type="xml">
      <xpath
        expr='//form/sheet/div[@name="button_box"]'
        position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
      <xpath
        expr='//form/sheet/div[@name="options"]'
        position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
      <xpath
        expr='//form/header'
        position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
      <xpath
        expr='//form/sheet/notebook'
        position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
      <xpath expr='//form/sheet/div[@class="oe_title"]' position="after">
        <group>
          <field name="list_price" class="oe_inline" widget='monetary'
            options="{'currency_field': 'currency_id', 'field_digits': True}" />
          <field name="default_code" string="Code" class="oe_inline" />
          <field name="customer_id" widget="many2many_tags"
            class="oe_inline" />
        </group>
      </xpath>
      <xpath expr='//form/sheet/field[@name="image_1920"]'
        position="before">
        <style>
          .oe_avatar1 {
          float: right;
          margin-bottom: 10px;
          width: 200px;
          height: 200px;
          }

          .oe_avatar1 img {
          width: 200px;
          height: 200px;
          object-fit: fill;
          vertical-align: top;
          border: 1px solid #dee2e6;
          }
        </style>
      </xpath>
      <xpath expr='//form/sheet/field[@name="image_1920"]'
        position="attributes">
        <attribute name="class">oe_avatar1</attribute>
        <attribute name="options" />
      </xpath>
    </field>
  </record>
</odoo>